// Generated by TerraformManager â€” AWS RDS multi-region deployment with cross-region replica and backups
{% if backend %}
terraform {
  backend "s3" {
    bucket         = "{{ backend.bucket }}"
    key            = "{{ backend.key }}"
    region         = "{{ backend.region }}"
    dynamodb_table = "{{ backend.dynamodb_table }}"
    encrypt        = true
  }
}
{% endif %}

provider "aws" {
  region = "{{ primary_region }}"
}

provider "aws" {
  alias  = "secondary"
  region = "{{ secondary_region }}"
}

locals {
  common_tags = {
    ManagedBy   = "TerraformManager"
    Environment = "{{ environment }}"
    Owner       = "{{ owner_tag }}"
    CostCenter  = "{{ cost_center_tag }}"
  }
}

variable "db_master_username" {
  description = "Master username for the primary RDS instance"
  type        = string
}

variable "db_master_password" {
  description = "Master password for the primary RDS instance"
  type        = string
  sensitive   = true
}

resource "aws_db_subnet_group" "{{ primary_subnet_group_resource_name }}" {
  name       = "{{ primary_subnet_group_name }}"
  subnet_ids = {{ primary_subnet_ids_literal }}
  tags       = local.common_tags
}

resource "aws_db_subnet_group" "{{ replica_subnet_group_resource_name }}" {
  provider  = aws.secondary
  name      = "{{ replica_subnet_group_name }}"
  subnet_ids = {{ replica_subnet_ids_literal }}
  tags      = local.common_tags
}

resource "aws_db_instance" "{{ primary_resource_name }}" {
  identifier                 = "{{ primary_db_identifier }}"
  engine                     = "{{ engine }}"
  engine_version             = "{{ engine_version }}"
  instance_class             = "{{ instance_class }}"
  allocated_storage          = {{ allocated_storage }}
  max_allocated_storage      = {{ max_allocated_storage }}
  multi_az                   = {{ "true" if multi_az else "false" }}
  db_subnet_group_name       = aws_db_subnet_group.{{ primary_subnet_group_resource_name }}.name
  vpc_security_group_ids     = {{ primary_security_group_ids_literal }}
  publicly_accessible        = false
  storage_encrypted          = true
  {% if primary_kms_key_id %}kms_key_id                = "{{ primary_kms_key_id }}"{% endif %}
  backup_retention_period    = {{ backup_retention }}
  preferred_backup_window    = "{{ preferred_backup_window }}"
  maintenance_window         = "{{ preferred_maintenance_window }}"
  deletion_protection        = true
  copy_tags_to_snapshot      = true
  auto_minor_version_upgrade = true
  apply_immediately          = false
  skip_final_snapshot        = false
  final_snapshot_identifier  = "{{ primary_db_identifier }}-final"
  monitoring_interval        = 60
  performance_insights_enabled = true
  {% if primary_kms_key_id %}performance_insights_kms_key_id = "{{ primary_kms_key_id }}"{% endif %}
  enabled_cloudwatch_logs_exports = {{ logs_exports_literal }}

  db_name  = "{{ db_name }}"
  username = var.db_master_username
  password = var.db_master_password

  tags = local.common_tags
}

resource "aws_db_instance" "{{ replica_resource_name }}" {
  provider               = aws.secondary
  identifier             = "{{ replica_db_identifier }}"
  replicate_source_db    = aws_db_instance.{{ primary_resource_name }}.id
  instance_class         = "{{ replica_instance_class }}"
  publicly_accessible    = false
  auto_minor_version_upgrade = true
  apply_immediately      = false
  monitoring_interval    = 60
  performance_insights_enabled = true
  {% if replica_kms_key_id %}kms_key_id = "{{ replica_kms_key_id }}"{% endif %}
  db_subnet_group_name   = aws_db_subnet_group.{{ replica_subnet_group_resource_name }}.name
  vpc_security_group_ids = {{ replica_security_group_ids_literal }}
  tags                   = local.common_tags

  depends_on = [aws_db_instance.{{ primary_resource_name }}]
}

resource "aws_backup_vault" "{{ backup_vault_resource_name }}" {
  name        = "{{ backup_vault_name }}"
  kms_key_arn = "{{ backup_kms_key_arn }}"
  tags        = local.common_tags
}

resource "aws_backup_vault" "{{ replica_backup_vault_resource_name }}" {
  provider    = aws.secondary
  name        = "{{ replica_backup_vault_name }}"
  kms_key_arn = "{{ replica_backup_kms_key_arn }}"
  tags        = local.common_tags
}

resource "aws_backup_plan" "{{ backup_plan_resource_name }}" {
  name = "{{ backup_plan_name }}"

  rule {
    rule_name         = "{{ backup_rule_name }}"
    target_vault_name = aws_backup_vault.{{ backup_vault_resource_name }}.name
    schedule          = "{{ backup_cron }}"
    lifecycle {
      cold_storage_after = {{ cold_storage_after }}
      delete_after       = {{ delete_after }}
    }

    copy_action {
      destination_vault_arn = aws_backup_vault.{{ replica_backup_vault_resource_name }}.arn
    }
  }

  tags = local.common_tags
}

resource "aws_backup_selection" "{{ backup_selection_resource_name }}" {
  name         = "{{ backup_selection_name }}"
  plan_id      = aws_backup_plan.{{ backup_plan_resource_name }}.id
  iam_role_arn = "{{ backup_iam_role_arn }}"

  resources = [
    aws_db_instance.{{ primary_resource_name }}.arn,
  ]
}

output "primary_db_endpoint" {
  value       = aws_db_instance.{{ primary_resource_name }}.endpoint
  description = "Endpoint for the primary RDS instance."
}

output "read_replica_endpoint" {
  value       = aws_db_instance.{{ replica_resource_name }}.endpoint
  description = "Endpoint for the cross-region read replica."
}
