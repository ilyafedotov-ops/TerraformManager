// Generated by TerraformManager â€” AWS RDS baseline
{% if backend %}
terraform {
  backend "s3" {
    bucket         = "{{ backend.bucket }}"
    key            = "{{ backend.key }}"
    region         = "{{ backend.region }}"
    dynamodb_table = "{{ backend.dynamodb_table }}"
    encrypt        = true
  }
}
{% endif %}

provider "aws" {
  region = "{{ region }}"
}

locals {
  common_tags = {
    ManagedBy   = "TerraformManager"
    Environment = "{{ environment }}"
    Owner       = "{{ owner_tag }}"
    CostCenter  = "{{ cost_center_tag }}"
  }
}

variable "db_master_username" {
  description = "Master username for the RDS instance"
  type        = string
}

variable "db_master_password" {
  description = "Master password for the RDS instance"
  type        = string
  sensitive   = true
}

resource "aws_db_subnet_group" "{{ subnet_group_name }}" {
  name       = "{{ subnet_group_name }}"
  subnet_ids = {{ subnet_ids_literal }}
  tags       = local.common_tags
}

resource "aws_db_instance" "{{ db_identifier }}" {
  identifier                 = "{{ db_identifier }}"
  engine                     = "{{ engine }}"
  engine_version             = "{{ engine_version }}"
  instance_class             = "{{ instance_class }}"
  allocated_storage          = {{ allocated_storage }}
  max_allocated_storage      = {{ max_allocated_storage }}
  multi_az                   = {{ "true" if multi_az else "false" }}
  db_subnet_group_name       = aws_db_subnet_group.{{ subnet_group_name }}.name
  vpc_security_group_ids     = {{ security_group_ids_literal }}
  publicly_accessible        = false
  storage_encrypted          = true
  {% if kms_key_id %}kms_key_id                = "{{ kms_key_id }}"{% endif %}
  backup_retention_period    = {{ backup_retention }}
  backup_window              = "{{ backup_window }}"
  maintenance_window         = "{{ preferred_maintenance_window }}"
  deletion_protection        = true
  copy_tags_to_snapshot      = true
  auto_minor_version_upgrade = true
  apply_immediately          = false
  skip_final_snapshot        = false
  final_snapshot_identifier  = "{{ db_identifier }}-final"
  monitoring_interval        = 60
  performance_insights_enabled = true
  {% if kms_key_id %}performance_insights_kms_key_id = "{{ kms_key_id }}"{% endif %}
  enabled_cloudwatch_logs_exports = {{ logs_exports_literal }}

  db_name  = "{{ db_name }}"
  username = var.db_master_username
  password = var.db_master_password

  tags = local.common_tags
}
