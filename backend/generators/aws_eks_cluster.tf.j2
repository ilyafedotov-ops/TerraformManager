// Generated by TerraformManager â€” AWS EKS baseline
{% if backend %}
terraform {
  backend "s3" {
    bucket         = "{{ backend.bucket }}"
    key            = "{{ backend.key }}"
    region         = "{{ region }}"
    dynamodb_table = "{{ backend.dynamodb_table }}"
    encrypt        = true
  }
}
{% endif %}

provider "aws" {
  region = "{{ region }}"
}

locals {
  common_tags = {
    ManagedBy   = "TerraformManager"
    Environment = "{{ environment }}"
    Owner       = "{{ owner_tag }}"
    CostCenter  = "{{ cost_center_tag }}"
  }
}

resource "aws_iam_role" "{{ cluster_name }}_cluster_role" {
  name = "{{ cluster_name }}-cluster-role"
  assume_role_policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": { "Service": "eks.amazonaws.com" },
      "Action": "sts:AssumeRole"
    }
  ]
}
EOF
  tags = local.common_tags
}

resource "aws_iam_role_policy_attachment" "{{ cluster_name }}_cluster_AmazonEKSClusterPolicy" {
  role       = aws_iam_role.{{ cluster_name }}_cluster_role.name
  policy_arn = "arn:aws:iam::aws:policy/AmazonEKSClusterPolicy"
}

resource "aws_iam_role_policy_attachment" "{{ cluster_name }}_cluster_AmazonEKSVPCResourceController" {
  role       = aws_iam_role.{{ cluster_name }}_cluster_role.name
  policy_arn = "arn:aws:iam::aws:policy/AmazonEKSVPCResourceController"
}

resource "aws_security_group" "{{ cluster_name }}_cluster_sg" {
  name        = "{{ cluster_name }}-cluster-sg"
  description = "Security group for EKS control plane"
  vpc_id      = "{{ vpc_id }}"
  tags        = merge(local.common_tags, { Name = "{{ cluster_name }}-cluster-sg" })

  egress {
    description = "Allow control plane egress"
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}

resource "aws_eks_cluster" "{{ cluster_name }}" {
  name     = "{{ cluster_name }}"
  role_arn = aws_iam_role.{{ cluster_name }}_cluster_role.arn
  version  = "{{ kubernetes_version }}"

  vpc_config {
    endpoint_private_access = true
    endpoint_public_access  = {{ "true" if allow_public_api else "false" }}
    subnet_ids              = {{ private_subnet_ids_literal }}
    security_group_ids      = [aws_security_group.{{ cluster_name }}_cluster_sg.id]
    {% if allow_public_api %}
    public_access_cidrs     = {{ public_access_cidrs_literal }}
    {% endif %}
  }

  enabled_cluster_log_types = ["api", "audit", "authenticator", "controllerManager", "scheduler"]

  {% if kms_key_arn %}
  encryption_config {
    provider {
      key_arn = "{{ kms_key_arn }}"
    }
    resources = ["secrets"]
  }
  {% endif %}

  tags = local.common_tags
}

resource "aws_iam_role" "{{ cluster_name }}_node_role" {
  name = "{{ cluster_name }}-node-role"
  assume_role_policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": { "Service": "ec2.amazonaws.com" },
      "Action": "sts:AssumeRole"
    }
  ]
}
EOF
  tags = local.common_tags
}

resource "aws_iam_role_policy_attachment" "{{ cluster_name }}_AmazonEKSWorkerNodePolicy" {
  role       = aws_iam_role.{{ cluster_name }}_node_role.name
  policy_arn = "arn:aws:iam::aws:policy/AmazonEKSWorkerNodePolicy"
}

resource "aws_iam_role_policy_attachment" "{{ cluster_name }}_AmazonEKS_CNI_Policy" {
  role       = aws_iam_role.{{ cluster_name }}_node_role.name
  policy_arn = "arn:aws:iam::aws:policy/AmazonEKS_CNI_Policy"
}

resource "aws_iam_role_policy_attachment" "{{ cluster_name }}_AmazonEC2ContainerRegistryReadOnly" {
  role       = aws_iam_role.{{ cluster_name }}_node_role.name
  policy_arn = "arn:aws:iam::aws:policy/AmazonEC2ContainerRegistryReadOnly"
}

{% if enforce_imdsv2 %}
resource "aws_launch_template" "{{ cluster_name }}_node_lt" {
  name_prefix = "{{ cluster_name }}-ng-"
  update_default_version = true

  metadata_options {
    http_endpoint = "enabled"
    http_tokens   = "required"
  }

  tag_specifications {
    resource_type = "instance"
    tags          = local.common_tags
  }

  tag_specifications {
    resource_type = "volume"
    tags          = local.common_tags
  }
}
{% endif %}

resource "aws_eks_node_group" "{{ cluster_name }}_node_group" {
  cluster_name    = aws_eks_cluster.{{ cluster_name }}.name
  node_group_name = "{{ cluster_name }}-ng"
  node_role_arn   = aws_iam_role.{{ cluster_name }}_node_role.arn
  subnet_ids      = {{ private_subnet_ids_literal }}
  ami_type        = "{{ node_ami_type }}"
  instance_types  = {{ instance_types_literal }}
  capacity_type   = "{{ capacity_type }}"
  {% if not enforce_imdsv2 %}
  disk_size       = {{ node_disk_size }}
  {% endif %}

  scaling_config {
    desired_size = {{ node_desired_size }}
    min_size     = {{ node_min_size }}
    max_size     = {{ node_max_size }}
  }

  labels = {
    environment = "{{ environment }}"
    managed_by  = "TerraformManager"
  }

  tags = local.common_tags

  update_config {
    max_unavailable = 1
  }

  {% if enforce_imdsv2 %}
  launch_template {
    name    = aws_launch_template.{{ cluster_name }}_node_lt.name
    version = "$Latest"
  }
  {% endif %}
}
