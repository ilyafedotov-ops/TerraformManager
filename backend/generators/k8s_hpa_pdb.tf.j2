// Generated by TerraformManager â€” Kubernetes HPA + PDB baseline
{% if backend %}
terraform {
  backend "s3" {
    endpoint                    = "{{ backend.endpoint }}"
    bucket                      = "{{ backend.bucket }}"
    key                         = "{{ backend.key }}"
    region                      = "{{ backend.region }}"
    skip_credentials_validation = true
    skip_region_validation      = true
    force_path_style            = true
  }
}
{% endif %}

provider "kubernetes" {
  host                   = var.kube_host
  token                  = var.kube_token
  cluster_ca_certificate = base64decode(var.kube_ca)
}

variable "kube_host" { description = "https://your-api-server:6443" }
variable "kube_token" { description = "Service account token" }
variable "kube_ca"    { description = "Base64-encoded cluster CA" }

locals {
  labels = {
    app         = "{{ app_label }}"
    environment = "{{ environment }}"
    managed_by  = "TerraformManager"
  }
}

resource "kubernetes_horizontal_pod_autoscaler_v2" "{{ resource_name }}_hpa" {
  metadata {
    name      = "{{ app_label }}-hpa"
    namespace = "{{ namespace_actual }}"
    labels    = local.labels
  }

  spec {
    min_replicas = {{ min_replicas }}
    max_replicas = {{ max_replicas }}
    scale_target_ref {
      api_version = "apps/v1"
      kind        = "Deployment"
      name        = "{{ deployment_name }}"
    }

    metric {
      type = "Resource"
      resource {
        name = "cpu"
        target {
          type                = "Utilization"
          average_utilization = {{ target_cpu_utilization }}
        }
      }
    }

    {% if target_memory_utilization %}
    metric {
      type = "Resource"
      resource {
        name = "memory"
        target {
          type                = "Utilization"
          average_utilization = {{ target_memory_utilization }}
        }
      }
    }
    {% endif %}
  }
}

resource "kubernetes_pod_disruption_budget" "{{ resource_name }}_pdb" {
  metadata {
    name      = "{{ app_label }}-pdb"
    namespace = "{{ namespace_actual }}"
    labels    = local.labels
  }

  spec {
    {% if pdb_min_available %}
    min_available = "{{ pdb_min_available }}"
    {% else %}
    max_unavailable = "{{ pdb_max_unavailable }}"
    {% endif %}
    selector {
      match_labels = {
        app = "{{ app_label }}"
      }
    }
  }
}
