// Generated by TerraformManager
{% if backend %}
terraform {
  backend "s3" {
    bucket         = "{{ backend.bucket }}"
    key            = "{{ backend.key }}"
    region         = "{{ backend.region }}"
    dynamodb_table = "{{ backend.dynamodb_table }}"
    encrypt        = true
  }
}
{% endif %}

provider "aws" { region = "{{ region }}" }

resource "aws_s3_bucket" "{{ name }}" {
  bucket        = "{{ bucket_name }}"
  # `force_destroy` is recommended only for lower environments with no critical data.
  force_destroy = {{ "true" if force_destroy else "false" }}
  tags = {
    ManagedBy   = "TerraformManager"
    Environment = "{{ environment }}"
    Owner       = "{{ owner_tag }}"
    CostCenter  = "{{ cost_center_tag }}"
  }
}

resource "aws_s3_bucket_public_access_block" "{{ name }}" {
  bucket                  = aws_s3_bucket.{{ name }}.id
  block_public_acls       = true
  block_public_policy     = true
  ignore_public_acls      = true
  restrict_public_buckets = true
}

resource "aws_s3_bucket_versioning" "{{ name }}" {
  bucket = aws_s3_bucket.{{ name }}.id
  versioning_configuration { status = "{{ "Enabled" if versioning else "Suspended" }}" }
}

resource "aws_s3_bucket_server_side_encryption_configuration" "{{ name }}" {
  bucket = aws_s3_bucket.{{ name }}.id
  rule {
    apply_server_side_encryption_by_default {
      sse_algorithm     = "{{ "aws:kms" if kms_key_id else "AES256" }}"{% if kms_key_id %}
      kms_master_key_id = "{{ kms_key_id }}"{% endif %}
    }
  }
}

{% if enforce_secure_transport %}
resource "aws_s3_bucket_policy" "{{ name }}_secure_transport" {
  bucket = aws_s3_bucket.{{ name }}.id
  policy = <<POLICY
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EnforceTLS",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "${aws_s3_bucket.{{ name }}.arn}",
        "${aws_s3_bucket.{{ name }}.arn}/*"
      ],
      "Condition": {
        "Bool": { "aws:SecureTransport": "false" }
      }
    }
  ]
}
POLICY
}
{% endif %}
