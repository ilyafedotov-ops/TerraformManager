// Generated by TerraformManager â€” AWS CloudTrail + Config baseline
{% if backend %}
terraform {
  backend "s3" {
    bucket         = "{{ backend.bucket }}"
    key            = "{{ backend.key }}"
    region         = "{{ region }}"
    dynamodb_table = "{{ backend.dynamodb_table }}"
    encrypt        = true
  }
}
{% endif %}

provider "aws" {
  region = "{{ region }}"
}

locals {
  common_tags = {
    ManagedBy   = "TerraformManager"
    Environment = "{{ environment }}"
    Owner       = "{{ owner_tag }}"
    CostCenter  = "{{ cost_center_tag }}"
  }
}

resource "aws_s3_bucket" "{{ trail_bucket_name }}" {
  bucket = "{{ cloudtrail_bucket }}"
  force_destroy = false
  tags = merge(local.common_tags, { Name = "{{ trail_bucket_name }}-logs" })
}

resource "aws_s3_bucket_public_access_block" "{{ trail_bucket_name }}_pab" {
  bucket                  = aws_s3_bucket.{{ trail_bucket_name }}.id
  block_public_acls       = true
  block_public_policy     = true
  ignore_public_acls      = true
  restrict_public_buckets = true
}

resource "aws_s3_bucket_versioning" "{{ trail_bucket_name }}_versioning" {
  bucket = aws_s3_bucket.{{ trail_bucket_name }}.id
  versioning_configuration {
    status = "Enabled"
  }
}

resource "aws_s3_bucket_server_side_encryption_configuration" "{{ trail_bucket_name }}_sse" {
  bucket = aws_s3_bucket.{{ trail_bucket_name }}.id
  rule {
    apply_server_side_encryption_by_default {
      sse_algorithm = "{{ "aws:kms" if kms_key_id else "AES256" }}"{% if kms_key_id %}
      kms_master_key_id = "{{ kms_key_id }}"{% endif %}
    }
  }
}

resource "aws_s3_bucket_policy" "{{ trail_bucket_name }}_policy" {
  bucket = aws_s3_bucket.{{ trail_bucket_name }}.id
  policy = <<POLICY
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AWSCloudTrailAclCheck",
      "Effect": "Allow",
      "Principal": { "Service": "cloudtrail.amazonaws.com" },
      "Action": "s3:GetBucketAcl",
      "Resource": "${aws_s3_bucket.{{ trail_bucket_name }}.arn}"
    },
    {
      "Sid": "AWSCloudTrailWrite",
      "Effect": "Allow",
      "Principal": { "Service": "cloudtrail.amazonaws.com" },
      "Action": "s3:PutObject",
      "Resource": "${aws_s3_bucket.{{ trail_bucket_name }}.arn}/AWSLogs/*",
      "Condition": {
        "StringEquals": { "s3:x-amz-acl": "bucket-owner-full-control" }
      }
    }
  ]
}
POLICY
}

resource "aws_cloudwatch_log_group" "{{ trail_name }}_logs" {
  name              = "/aws/cloudtrail/{{ trail_name }}"
  retention_in_days = 365
  {% if kms_key_id %}
  kms_key_id        = "{{ kms_key_id }}"
  {% endif %}
  tags              = local.common_tags
}

resource "aws_iam_role" "{{ trail_name }}_cloudtrail_role" {
  name = "{{ trail_name }}-cloudtrail"
  assume_role_policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": { "Service": "cloudtrail.amazonaws.com" },
      "Action": "sts:AssumeRole"
    }
  ]
}
EOF
  tags = local.common_tags
}

resource "aws_iam_role_policy" "{{ trail_name }}_cloudtrail_policy" {
  name = "{{ trail_name }}-cloudtrail-policy"
  role = aws_iam_role.{{ trail_name }}_cloudtrail_role.id
  policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "${aws_cloudwatch_log_group.{{ trail_name }}_logs.arn}:*"
    }
  ]
}
EOF
}

resource "aws_cloudtrail" "{{ trail_name }}" {
  name                          = "{{ trail_name }}"
  s3_bucket_name                = aws_s3_bucket.{{ trail_bucket_name }}.id
  cloud_watch_logs_group_arn    = aws_cloudwatch_log_group.{{ trail_name }}_logs.arn
  cloud_watch_logs_role_arn     = aws_iam_role.{{ trail_name }}_cloudtrail_role.arn
  is_multi_region_trail         = true
  include_global_service_events = true
  enable_log_file_validation    = true
  {% if kms_key_id %}
  kms_key_id                    = "{{ kms_key_id }}"
  {% endif %}
  tags                          = local.common_tags
}

resource "aws_iam_role" "{{ config_role_name }}" {
  name = "{{ config_role_name }}"
  assume_role_policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": { "Service": "config.amazonaws.com" },
      "Action": "sts:AssumeRole"
    }
  ]
}
EOF
  tags = local.common_tags
}

resource "aws_iam_role_policy_attachment" "{{ config_role_name }}_policy" {
  role       = aws_iam_role.{{ config_role_name }}.name
  policy_arn = "arn:aws:iam::aws:policy/service-role/AWSConfigRole"
}

resource "aws_config_configuration_recorder" "{{ config_recorder_name }}" {
  name     = "{{ config_recorder_name }}"
  role_arn = aws_iam_role.{{ config_role_name }}.arn

  recording_group {
    all_supported                 = true
    include_global_resource_types = true
  }
}

resource "aws_config_delivery_channel" "{{ config_recorder_name }}" {
  name           = "{{ config_recorder_name }}-channel"
  s3_bucket_name = aws_s3_bucket.{{ trail_bucket_name }}.bucket
  config_snapshot_delivery_properties {
    delivery_frequency = "TwentyFour_Hours"
  }
  depends_on = [aws_config_configuration_recorder.{{ config_recorder_name }}]
}

resource "aws_config_configuration_recorder_status" "{{ config_recorder_name }}" {
  name       = aws_config_configuration_recorder.{{ config_recorder_name }}.name
  is_enabled = true
  depends_on = [aws_config_delivery_channel.{{ config_recorder_name }}]
}
