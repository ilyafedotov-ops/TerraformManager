// Generated by TerraformManager â€” Azure Key Vault baseline
{% if backend %}
terraform {
  backend "azurerm" {
    resource_group_name  = "{{ backend.resource_group }}"
    storage_account_name = "{{ backend.storage_account }}"
    container_name       = "{{ backend.container }}"
    key                  = "{{ backend.key }}"
  }
}
{% endif %}

provider "azurerm" {
  features {}
}

{%- if rg_name != "rg" %}
moved {
  from = azurerm_resource_group.rg
  to   = azurerm_resource_group.{{ rg_name }}
}

{%- endif %}

{%- if kv_name != "kv" %}
moved {
  from = azurerm_key_vault.kv
  to   = azurerm_key_vault.{{ kv_name }}
}

moved {
  from = azurerm_private_dns_zone.kv_dns
  to   = azurerm_private_dns_zone.{{ kv_name }}_dns
}

moved {
  from = azurerm_private_dns_zone_virtual_network_link.kv_dns_link
  to   = azurerm_private_dns_zone_virtual_network_link.{{ kv_name }}_dns_link
}

moved {
  from = azurerm_private_endpoint.kv_pe
  to   = azurerm_private_endpoint.{{ kv_name }}_pe
}

{%- endif %}

locals {
  tags = {
    ManagedBy   = "TerraformManager"
    Environment = "{{ environment }}"
    Owner       = "{{ owner_tag }}"
    CostCenter  = "{{ cost_center_tag }}"
  }
}

resource "azurerm_resource_group" "{{ rg_name }}" {
  name     = "{{ rg_actual_name }}"
  location = "{{ location }}"
  tags     = local.tags
}

resource "azurerm_key_vault" "{{ kv_name }}" {
  name                        = "{{ kv_actual_name }}"
  tenant_id                   = "{{ tenant_id }}"
  location                    = azurerm_resource_group.{{ rg_name }}.location
  resource_group_name         = azurerm_resource_group.{{ rg_name }}.name
  sku_name                    = "standard"
  enable_rbac_authorization   = true
  purge_protection_enabled    = true
  soft_delete_enabled         = true
  soft_delete_retention_days  = {{ soft_delete_retention_days }}
  public_network_access_enabled = false

  network_acls {
    default_action = "Deny"
    bypass         = ["AzureServices"]
    ip_rules       = {{ ip_rules_literal }}
  }

  tags = local.tags
}

resource "azurerm_private_dns_zone" "{{ kv_name }}_dns" {
  name                = "privatelink.vaultcore.azure.net"
  resource_group_name = azurerm_resource_group.{{ rg_name }}.name
  tags                = local.tags
}

resource "azurerm_private_dns_zone_virtual_network_link" "{{ kv_name }}_dns_link" {
  name                  = "{{ kv_actual_name }}-dns-link"
  resource_group_name   = azurerm_resource_group.{{ rg_name }}.name
  private_dns_zone_name = azurerm_private_dns_zone.{{ kv_name }}_dns.name
  virtual_network_id    = "{{ vnet_id }}"
  tags                  = local.tags
}

resource "azurerm_private_endpoint" "{{ kv_name }}_pe" {
  name                = "{{ kv_actual_name }}-pe"
  location            = azurerm_resource_group.{{ rg_name }}.location
  resource_group_name = azurerm_resource_group.{{ rg_name }}.name
  subnet_id           = "{{ subnet_id }}"
  tags                = local.tags

  private_service_connection {
    name                           = "{{ kv_actual_name }}-psc"
    private_connection_resource_id = azurerm_key_vault.{{ kv_name }}.id
    subresource_names              = ["vault"]
    is_manual_connection           = false
  }

  private_dns_zone_group {
    name                 = "{{ kv_actual_name }}-dns-group"
    private_dns_zone_ids = [azurerm_private_dns_zone.{{ kv_name }}_dns.id]
  }
}
