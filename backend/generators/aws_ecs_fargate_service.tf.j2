// Generated by TerraformManager â€” AWS ECS Fargate service baseline
{% if backend %}
terraform {
  backend "s3" {
    bucket         = "{{ backend.bucket }}"
    key            = "{{ backend.key }}"
    region         = "{{ backend.region }}"
    dynamodb_table = "{{ backend.dynamodb_table }}"
    encrypt        = true
  }
}
{% endif %}

provider "aws" {
  region = "{{ region }}"
}

locals {
  common_tags = {
    ManagedBy   = "TerraformManager"
    Environment = "{{ environment }}"
    Owner       = "{{ owner_tag }}"
    CostCenter  = "{{ cost_center_tag }}"
  }
}

resource "aws_ecs_cluster" "{{ cluster_resource_name }}" {
  name = "{{ cluster_actual_name }}"

  setting {
    name  = "containerInsights"
    value = "enabled"
  }

  tags = local.common_tags
}

resource "aws_cloudwatch_log_group" "{{ log_group_resource_name }}" {
  name              = "/aws/ecs/{{ cluster_actual_name }}/{{ service_actual_name }}"
  retention_in_days = {{ log_retention_days }}
{% if log_kms_key_id %}
  kms_key_id        = "{{ log_kms_key_id }}"
{% endif %}
  tags              = local.common_tags
}

resource "aws_iam_role" "{{ execution_role_resource_name }}" {
  name = "{{ execution_role_actual_name }}"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Principal = {
          Service = "ecs-tasks.amazonaws.com"
        }
        Action = "sts:AssumeRole"
      }
    ]
  })

  tags = local.common_tags
}

resource "aws_iam_role_policy_attachment" "{{ execution_role_resource_name }}_execution" {
  role       = aws_iam_role.{{ execution_role_resource_name }}.name
  policy_arn = "arn:aws:iam::aws:policy/service-role/AmazonECSTaskExecutionRolePolicy"
}

resource "aws_iam_role" "{{ task_role_resource_name }}" {
  name = "{{ task_role_actual_name }}"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Principal = {
          Service = "ecs-tasks.amazonaws.com"
        }
        Action = "sts:AssumeRole"
      }
    ]
  })

  tags = local.common_tags
}

{% if has_ssm_parameters %}
resource "aws_iam_role_policy" "{{ task_role_resource_name }}_ssm_read" {
  name = "{{ service_actual_name }}-ssm-read"
  role = aws_iam_role.{{ task_role_resource_name }}.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Sid     = "ParameterStoreRead"
        Effect  = "Allow"
        Action  = [
          "ssm:GetParameter",
          "ssm:GetParameters",
          "ssm:GetParametersByPath"
        ]
        Resource = {{ ssm_parameter_arns_literal }}
      }
    ]
  })
}
{% endif %}

resource "aws_ecs_task_definition" "{{ task_definition_resource_name }}" {
  family                   = "{{ task_family }}"
  requires_compatibilities = ["FARGATE"]
  network_mode             = "awsvpc"
  cpu                      = "{{ cpu }}"
  memory                   = "{{ memory }}"
  execution_role_arn       = aws_iam_role.{{ execution_role_resource_name }}.arn
  task_role_arn            = aws_iam_role.{{ task_role_resource_name }}.arn

  container_definitions = <<DEFS
{{ container_definitions_json }}
DEFS

  tags = local.common_tags
}

resource "aws_ecs_service" "{{ service_resource_name }}" {
  name            = "{{ service_actual_name }}"
  cluster         = aws_ecs_cluster.{{ cluster_resource_name }}.id
  task_definition = aws_ecs_task_definition.{{ task_definition_resource_name }}.arn
  desired_count   = {{ desired_count }}
  launch_type     = "FARGATE"
  platform_version = "{{ platform_version }}"
  deployment_minimum_healthy_percent = 100
  deployment_maximum_percent         = 200
  enable_execute_command             = {{ "true" if enable_execute_command else "false" }}
  enable_ecs_managed_tags            = true
  propagate_tags                     = "TASK_DEFINITION"
{% if health_check_grace_period %}
  health_check_grace_period_seconds = {{ health_check_grace_period }}
{% endif %}

  network_configuration {
    subnets         = {{ subnet_ids_literal }}
    security_groups = {{ security_group_ids_literal }}
    assign_public_ip = "DISABLED"
  }

{% if circuit_breaker_enabled %}
  deployment_circuit_breaker {
    enable   = true
    rollback = true
  }
{% endif %}

  tags = local.common_tags
}

output "{{ service_resource_name }}_name" {
  description = "ECS service name"
  value       = aws_ecs_service.{{ service_resource_name }}.name
}

output "{{ cluster_resource_name }}_id" {
  description = "ECS cluster ID"
  value       = aws_ecs_cluster.{{ cluster_resource_name }}.id
}

output "{{ task_definition_resource_name }}_arn" {
  description = "ECS task definition ARN"
  value       = aws_ecs_task_definition.{{ task_definition_resource_name }}.arn
}
