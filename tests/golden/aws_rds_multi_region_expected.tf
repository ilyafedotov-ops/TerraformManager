// Generated by TerraformManager â€” AWS RDS multi-region deployment with cross-region replica and backups


provider "aws" {
  region = "us-east-1"
}

provider "aws" {
  alias  = "secondary"
  region = "us-west-2"
}

locals {
  common_tags = {
    ManagedBy   = "TerraformManager"
    Environment = "prod"
    Owner       = "platform"
    CostCenter  = "ENG"
  }
}

variable "db_master_username" {
  description = "Master username for the primary RDS instance"
  type        = string
}

variable "db_master_password" {
  description = "Master password for the primary RDS instance"
  type        = string
  sensitive   = true
}

resource "aws_db_subnet_group" "prod_app_db_primary_subnets" {
  name       = "prod-app-db-primary-subnets"
  subnet_ids = ["subnet-1","subnet-2"]
  tags       = local.common_tags
}

resource "aws_db_subnet_group" "prod_app_db_usw2_subnets" {
  provider  = aws.secondary
  name      = "prod-app-db-usw2-subnets"
  subnet_ids = ["subnet-a","subnet-b"]
  tags      = local.common_tags
}

resource "aws_db_instance" "prod_app_db" {
  identifier                 = "prod-app-db"
  engine                     = "postgres"
  engine_version             = "14.10"
  instance_class             = "db.m6i.large"
  allocated_storage          = 100
  max_allocated_storage      = 200
  multi_az                   = true
  db_subnet_group_name       = aws_db_subnet_group.prod_app_db_primary_subnets.name
  vpc_security_group_ids     = ["sg-primary"]
  publicly_accessible        = false
  storage_encrypted          = true
  kms_key_id                = "arn:aws:kms:us-east-1:123456789012:key/primary"
  backup_retention_period    = 7
  preferred_backup_window    = "03:00-05:00"
  maintenance_window         = "sun:05:00-sun:06:00"
  deletion_protection        = true
  copy_tags_to_snapshot      = true
  auto_minor_version_upgrade = true
  apply_immediately          = false
  skip_final_snapshot        = false
  final_snapshot_identifier  = "prod-app-db-final"
  monitoring_interval        = 60
  performance_insights_enabled = true
  performance_insights_kms_key_id = "arn:aws:kms:us-east-1:123456789012:key/primary"
  enabled_cloudwatch_logs_exports = ["postgresql"]

  db_name  = "appdb"
  username = var.db_master_username
  password = var.db_master_password

  tags = local.common_tags
}

resource "aws_db_instance" "prod_app_db_usw2" {
  provider               = aws.secondary
  identifier             = "prod-app-db-usw2"
  replicate_source_db    = aws_db_instance.prod_app_db.id
  instance_class         = "db.m6i.large"
  publicly_accessible    = false
  auto_minor_version_upgrade = true
  apply_immediately      = false
  monitoring_interval    = 60
  performance_insights_enabled = true
  kms_key_id = "arn:aws:kms:us-west-2:123456789012:key/replica"
  db_subnet_group_name   = aws_db_subnet_group.prod_app_db_usw2_subnets.name
  vpc_security_group_ids = ["sg-replica"]
  tags                   = local.common_tags

  depends_on = [aws_db_instance.prod_app_db]
}

resource "aws_backup_vault" "prod_app_backup" {
  name        = "prod-app-backup"
  kms_key_arn = "arn:aws:kms:us-east-1:123:key/backup"
  tags        = local.common_tags
}

resource "aws_backup_vault" "prod_app_backup_usw2" {
  provider    = aws.secondary
  name        = "prod-app-backup-usw2"
  kms_key_arn = "arn:aws:kms:us-west-2:123:key/backup"
  tags        = local.common_tags
}

resource "aws_backup_plan" "prod_app_backup_plan" {
  name = "prod-app-backup-plan"

  rule {
    rule_name         = "daily-backup"
    target_vault_name = aws_backup_vault.prod_app_backup.name
    schedule          = "cron(0 7 * * ? *)"
    lifecycle {
      cold_storage_after = 30
      delete_after       = 120
    }

    copy_action {
      destination_vault_arn = aws_backup_vault.prod_app_backup_usw2.arn
    }
  }

  tags = local.common_tags
}

resource "aws_backup_selection" "rds_primary_selection" {
  name         = "rds-primary-selection"
  plan_id      = aws_backup_plan.prod_app_backup_plan.id
  iam_role_arn = "arn:aws:iam::123456789012:role/service-role/AWSBackupDefaultServiceRole"

  resources = [
    aws_db_instance.prod_app_db.arn,
  ]
}

output "primary_db_endpoint" {
  value       = aws_db_instance.prod_app_db.endpoint
  description = "Endpoint for the primary RDS instance."
}

output "read_replica_endpoint" {
  value       = aws_db_instance.prod_app_db_usw2.endpoint
  description = "Endpoint for the cross-region read replica."
}