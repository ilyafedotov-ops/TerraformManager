provider "aws" {
  region = "us-east-1"
}

locals {
  common_tags = {
    ManagedBy   = "TerraformManager"
    Environment = "prod"
    Owner       = "platform"
    CostCenter  = "ENG"
  }
}

variable "db_master_username" {
  description = "Master username for the RDS instance"
  type        = string
}

variable "db_master_password" {
  description = "Master password for the RDS instance"
  type        = string
  sensitive   = true
}

resource "aws_db_subnet_group" "prod-app-db-subnets" {
  name       = "prod-app-db-subnets"
  subnet_ids = ["subnet-111","subnet-222"]
  tags       = local.common_tags
}

resource "aws_db_instance" "prod-app-db" {
  identifier                 = "prod-app-db"
  engine                     = "postgres"
  engine_version             = "14.10"
  instance_class             = "db.m6i.large"
  allocated_storage          = 100
  max_allocated_storage      = 200
  multi_az                   = true
  db_subnet_group_name       = aws_db_subnet_group.prod-app-db-subnets.name
  vpc_security_group_ids     = ["sg-abc123"]
  publicly_accessible        = false
  storage_encrypted          = true
  kms_key_id                = "arn:aws:kms:us-east-1:123456789012:key/example"
  backup_retention_period    = 7
  backup_window              = "03:00-04:00"
  maintenance_window         = "sun:05:00-sun:06:00"
  deletion_protection        = true
  copy_tags_to_snapshot      = true
  auto_minor_version_upgrade = true
  apply_immediately          = false
  skip_final_snapshot        = false
  final_snapshot_identifier  = "prod-app-db-final"
  monitoring_interval        = 60
  performance_insights_enabled = true
  performance_insights_kms_key_id = "arn:aws:kms:us-east-1:123456789012:key/example"
  enabled_cloudwatch_logs_exports = ["postgresql"]

  db_name  = "appdb"
  username = var.db_master_username
  password = var.db_master_password

  tags = local.common_tags
}
