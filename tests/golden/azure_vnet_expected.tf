provider "azurerm" {
  features {}
}

locals {
  tags = {
    ManagedBy   = "TerraformManager"
    Environment = "prod"
    Owner       = "platform"
    CostCenter  = "ENG"
  }
}

resource "azurerm_resource_group" "rg" {
  name     = "rg-network"
  location = "eastus"
  tags     = local.tags
}

resource "azurerm_log_analytics_workspace" "appnet_law" {
  name                = "appnet-law"
  location            = azurerm_resource_group.rg.location
  resource_group_name = azurerm_resource_group.rg.name
  sku                 = "PerGB2018"
  retention_in_days   = 30
  tags                = local.tags
}

resource "azurerm_virtual_network" "appnet_vnet" {
  name                = "appnet-vnet"
  resource_group_name = azurerm_resource_group.rg.name
  location            = azurerm_resource_group.rg.location
  address_space       = ["10.20.0.0/16"]
  dns_servers         = []
  tags                = local.tags
}

resource "azurerm_subnet" "appnet_workload" {
  name                 = "appnet-workload"
  resource_group_name  = azurerm_resource_group.rg.name
  virtual_network_name = azurerm_virtual_network.appnet_vnet.name
  address_prefixes     = ["10.20.1.0/24"]
  private_endpoint_network_policies_enabled = true
  private_link_service_network_policies_enabled = false
}

resource "azurerm_subnet" "appnet_bastion" {
  name                 = "appnet-bastion"
  resource_group_name  = azurerm_resource_group.rg.name
  virtual_network_name = azurerm_virtual_network.appnet_vnet.name
  address_prefixes     = ["10.20.10.0/27"]
}

resource "azurerm_network_security_group" "appnet_nsg" {
  name                = "appnet-workload-nsg"
  location            = azurerm_resource_group.rg.location
  resource_group_name = azurerm_resource_group.rg.name
  tags                = local.tags

  security_rule {
    name                       = "AllowManagementSSH"
    priority                   = 100
    direction                  = "Inbound"
    access                     = "Allow"
    protocol                   = "Tcp"
    source_port_range          = "*"
    destination_port_range     = "22"
    source_address_prefix      = "10.0.0.0/24"
    destination_address_prefix = "*"
  }

  security_rule {
    name                       = "DenyInternetInbound"
    priority                   = 200
    direction                  = "Inbound"
    access                     = "Deny"
    protocol                   = "*"
    source_port_range          = "*"
    destination_port_range     = "*"
    source_address_prefix      = "Internet"
    destination_address_prefix = "*"
  }
}

resource "azurerm_subnet_network_security_group_association" "appnet_workload_assoc" {
  subnet_id                 = azurerm_subnet.appnet_workload.id
  network_security_group_id = azurerm_network_security_group.appnet_nsg.id
}

resource "azurerm_network_watcher" "appnet_nw" {
  name                = "appnet-nw"
  location            = azurerm_resource_group.rg.location
  resource_group_name = azurerm_resource_group.rg.name
  tags                = local.tags
}

resource "azurerm_network_watcher_flow_log" "appnet_flow_log" {
  name                 = "appnet-flowlog"
  network_watcher_name = azurerm_network_watcher.appnet_nw.name
  resource_group_name  = azurerm_network_watcher.appnet_nw.resource_group_name
  network_security_group_id = azurerm_network_security_group.appnet_nsg.id

  retention_policy {
    enabled = true
    days    = 90
  }

  traffic_analytics {
    enabled               = true
    workspace_id          = azurerm_log_analytics_workspace.appnet_law.workspace_id
    workspace_region      = azurerm_log_analytics_workspace.appnet_law.location
    workspace_resource_id = azurerm_log_analytics_workspace.appnet_law.id
    interval_in_minutes   = 10
  }
}