provider "aws" {
  region = "us-east-1"
}

locals {
  common_tags = {
    ManagedBy   = "TerraformManager"
    Environment = "prod"
    Owner       = "platform"
    CostCenter  = "ENG"
  }
}

resource "aws_ecs_cluster" "app_ecs_cluster" {
  name = "app-ecs-cluster"

  setting {
    name  = "containerInsights"
    value = "enabled"
  }

  tags = local.common_tags
}

resource "aws_cloudwatch_log_group" "app_ecs_logs" {
  name              = "/aws/ecs/app-ecs-cluster/app-web-service"
  retention_in_days = 30

  tags              = local.common_tags
}

resource "aws_iam_role" "app_ecs_exec_role" {
  name = "app-web-service-exec-role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Principal = {
          Service = "ecs-tasks.amazonaws.com"
        }
        Action = "sts:AssumeRole"
      }
    ]
  })

  tags = local.common_tags
}

resource "aws_iam_role_policy_attachment" "app_ecs_exec_role_execution" {
  role       = aws_iam_role.app_ecs_exec_role.name
  policy_arn = "arn:aws:iam::aws:policy/service-role/AmazonECSTaskExecutionRolePolicy"
}

resource "aws_iam_role" "app_ecs_task_role" {
  name = "app-web-service-task-role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Principal = {
          Service = "ecs-tasks.amazonaws.com"
        }
        Action = "sts:AssumeRole"
      }
    ]
  })

  tags = local.common_tags
}


resource "aws_iam_role_policy" "app_ecs_task_role_ssm_read" {
  name = "app-web-service-ssm-read"
  role = aws_iam_role.app_ecs_task_role.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Sid     = "ParameterStoreRead"
        Effect  = "Allow"
        Action  = [
          "ssm:GetParameter",
          "ssm:GetParameters",
          "ssm:GetParametersByPath"
        ]
        Resource = ["arn:aws:ssm:us-east-1:123456789012:parameter/app/*"]
      }
    ]
  })
}


resource "aws_ecs_task_definition" "app_ecs_taskdef" {
  family                   = "app-web-service-task"
  requires_compatibilities = ["FARGATE"]
  network_mode             = "awsvpc"
  cpu                      = "512"
  memory                   = "1024"
  execution_role_arn       = aws_iam_role.app_ecs_exec_role.arn
  task_role_arn            = aws_iam_role.app_ecs_task_role.arn

  container_definitions = <<DEFS
[
  {
    "name": "web",
    "image": "public.ecr.aws/nginx/nginx:stable",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/aws/ecs/app-ecs-cluster/app-web-service",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "web"
      }
    },
    "environment": [
      {
        "name": "ENVIRONMENT",
        "value": "prod"
      }
    ],
    "readonlyRootFilesystem": true
  }
]
DEFS

  tags = local.common_tags
}

resource "aws_ecs_service" "app_ecs_service" {
  name            = "app-web-service"
  cluster         = aws_ecs_cluster.app_ecs_cluster.id
  task_definition = aws_ecs_task_definition.app_ecs_taskdef.arn
  desired_count   = 2
  launch_type     = "FARGATE"
  platform_version = "1.4.0"
  deployment_minimum_healthy_percent = 100
  deployment_maximum_percent         = 200
  enable_execute_command             = true
  enable_ecs_managed_tags            = true
  propagate_tags                     = "TASK_DEFINITION"

  health_check_grace_period_seconds = 60


  network_configuration {
    subnets         = ["subnet-1","subnet-2"]
    security_groups = ["sg-aaa","sg-bbb"]
    assign_public_ip = "DISABLED"
  }


  deployment_circuit_breaker {
    enable   = true
    rollback = true
  }


  tags = local.common_tags
}

output "app_ecs_service_name" {
  description = "ECS service name"
  value       = aws_ecs_service.app_ecs_service.name
}

output "app_ecs_cluster_id" {
  description = "ECS cluster ID"
  value       = aws_ecs_cluster.app_ecs_cluster.id
}

output "app_ecs_taskdef_arn" {
  description = "ECS task definition ARN"
  value       = aws_ecs_task_definition.app_ecs_taskdef.arn
}