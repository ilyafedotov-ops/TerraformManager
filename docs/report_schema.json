{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Terraform Review Findings",
  "type": "object",
  "definitions": {
    "aiAttribution": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "confidence": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "cached": {
          "type": "boolean"
        },
        "error": {
          "type": "string"
        }
      },
      "required": [
        "provider",
        "model"
      ]
    },
    "llm": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "explanations_enabled": {
          "type": "boolean"
        },
        "explanations_requested": {
          "type": "integer"
        },
        "explanations_completed": {
          "type": "integer"
        },
        "patches_enabled": {
          "type": "boolean"
        },
        "patches_requested": {
          "type": "integer"
        },
        "patches_completed": {
          "type": "integer"
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
,
    "costSummary": {
      "type": "object",
      "properties": {
        "currency": {
          "type": [
            "string",
            "null"
          ]
        },
        "total_monthly_cost": {
          "type": [
            "number",
            "null"
          ]
        },
        "total_hourly_cost": {
          "type": [
            "number",
            "null"
          ]
        },
        "diff_monthly_cost": {
          "type": [
            "number",
            "null"
          ]
        },
        "diff_hourly_cost": {
          "type": [
            "number",
            "null"
          ]
        }
      },
      "additionalProperties": true
    },
    "costProject": {
      "type": "object",
      "properties": {
        "name": {
          "type": [
            "string",
            "null"
          ]
        },
        "path": {
          "type": [
            "string",
            "null"
          ]
        },
        "monthly_cost": {
          "type": [
            "number",
            "null"
          ]
        },
        "hourly_cost": {
          "type": [
            "number",
            "null"
          ]
        },
        "diff_monthly_cost": {
          "type": [
            "number",
            "null"
          ]
        },
        "diff_hourly_cost": {
          "type": [
            "number",
            "null"
          ]
        }
      },
      "additionalProperties": true
    },
    "driftCounts": {
      "type": "object",
      "properties": {
        "create": {
          "type": "integer"
        },
        "update": {
          "type": "integer"
        },
        "delete": {
          "type": "integer"
        },
        "replace": {
          "type": "integer"
        },
        "no-op": {
          "type": "integer"
        }
      },
      "additionalProperties": true
    },
    "driftChange": {
      "type": "object",
      "properties": {
        "address": {
          "type": [
            "string",
            "null"
          ]
        },
        "module_address": {
          "type": [
            "string",
            "null"
          ]
        },
        "mode": {
          "type": [
            "string",
            "null"
          ]
        },
        "type": {
          "type": [
            "string",
            "null"
          ]
        },
        "name": {
          "type": [
            "string",
            "null"
          ]
        },
        "provider": {
          "type": [
            "string",
            "null"
          ]
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "action": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": true
    }
  },
  "properties": {
    "summary": {
      "type": "object",
      "properties": {
        "files_scanned": {
          "type": "integer"
        },
        "issues_found": {
          "type": "integer"
        },
        "cost": {
          "$ref": "#/definitions/costSummary"
        },
        "drift": {
          "type": "object",
          "properties": {
            "has_changes": {
              "type": "boolean"
            },
            "total_changes": {
              "type": "integer"
            },
            "counts": {
              "$ref": "#/definitions/driftCounts"
            }
          },
          "additionalProperties": true
        }
      },
      "required": [
        "files_scanned",
        "issues_found"
      ]
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "LOW",
              "MEDIUM",
              "HIGH",
              "CRITICAL"
            ]
          },
          "file": {
            "type": "string"
          },
          "line": {
            "type": "integer"
          },
          "rule": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "recommendation": {
            "type": "string"
          },
          "explanation": {
            "type": "string"
          },
          "snippet": {
            "type": "string"
          },
          "suggested_fix_snippet": {
            "type": "string"
          },
          "unified_diff": {
            "type": "string"
          },
          "explanation_ai": {
            "type": "object",
            "properties": {
              "attribution": {
                "$ref": "#/definitions/aiAttribution"
              },
              "why": {
                "type": "string"
              },
              "impact": {
                "type": "string"
              },
              "how_to_fix": {
                "type": "string"
              },
              "example_diff": {
                "type": "string"
              },
              "kb_refs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "attribution"
            ]
          },
          "patch_ai": {
            "type": "object",
            "properties": {
              "attribution": {
                "$ref": "#/definitions/aiAttribution"
              },
              "summary": {
                "type": "string"
              },
              "diff": {
                "type": "string"
              },
              "validation": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string"
                  },
                  "details": {
                    "type": "string"
                  }
                }
              }
            },
            "required": [
              "attribution"
            ]
          }
        },
        "required": [
          "id",
          "title",
          "severity",
          "file",
          "rule",
          "description"
        ]
      }
    },
    "cost": {
      "type": "object",
      "properties": {
        "tool": {
          "type": "string"
        },
        "currency": {
          "type": [
            "string",
            "null"
          ]
        },
        "summary": {
          "$ref": "#/definitions/costSummary"
        },
        "projects": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/costProject"
          }
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "commands": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": true
    },
    "drift": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string"
        },
        "counts": {
          "$ref": "#/definitions/driftCounts"
        },
        "total_changes": {
          "type": "integer"
        },
        "has_changes": {
          "type": "boolean"
        },
        "resource_changes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/driftChange"
          }
        },
        "output_changes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "actions": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "before": {},
              "after": {}
            },
            "required": [
              "name"
            ]
          }
        },
        "error": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "required": [
    "summary",
    "findings"
  ]
}
